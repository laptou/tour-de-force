{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "type": "shell",
            "command": "webpack",
            "args": [
                "-w"
            ],
            "label": "Webpack (Continuous)",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "promptOnClose": false
        },
        {
            "type": "shell",
            "command": "webpack",
            "label": "Webpack",
            "group": "build",
            "promptOnClose": true,
            "problemMatcher": {
                "owner": "webpack",
                "severity": "error",
                "fileLocation": "relative",
                "pattern": [
                    {
                        "regexp": "ERROR in (.*)",
                        "file": 1
                    },
                    {
                        "regexp": "\\((\\d+),(\\d+)\\):(.*)",
                        "line": 1,
                        "column": 2,
                        "message": 3
                    }
                ]
            }
        }
    ]
}